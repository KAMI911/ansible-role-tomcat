# {{ ansible_managed }}

[Unit]
Description=Tomcat {{ tomcat_process_name }} Java Application Server
After=syslog.target network.target

[Service]
Type=forking

Environment=CATALINA_HOME={{ tomcat_system_home }}/tomcat{{ tomcat_majorversion }}
Environment=CATALINA_BASE={{ tomcat_system_home }}/{{ tomcat_system_name }}

Environment=TOMCAT_USER="{{ tomcat_system_user }}"
Environment=TOMCAT_GROUP="{{ tomcat_system_group }}"
Environment=JAVA_HOME="{{ java_home }}"
Environment=JRE_HOME="{{ java_home }}"


ExecStart={{ tomcat_system_home }}/{{ tomcat_system_name }}/bin/startup.sh
ExecStop={{ tomcat_system_home }}/{{ tomcat_system_name }}/bin/shutdown.sh

[Install]
WantedBy=multi-user.target
